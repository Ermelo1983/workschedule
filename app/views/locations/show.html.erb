<%location = @location %>
<h1><%= location.name %></h1>
<p><%= location.full_address %></p>
<p><%= location.zip_or_postal_code%> <%= location.city %></p>
<br>
<div class="row">
  <div class='col-md-8'>
    <h2> Units/floors </h2>
    <br>
    <% location.units.each do |unit| %>
    <h3><%= unit.name %></h3>
    <p><%= "specialism: #{unit.specialism}" %></p>
    <p><%= "description: #{unit.description}" %></p>
    <p><%= "care burden: #{unit.care_burden}" %></p>
    <p><%= "employees: #{unit.employees.count}"%></p>
    <p><%= link_to 'Unit', unit_path(unit.id) %></p>
    <br>
    <% end %>
    <%= link_to 'new unit', new_unit_path, :location => location.id %>
  </div>

  <div class='col-md-4'>
    <h3><%= "Employees"%> </h3>
    <br>
    <% location.units.each do |unit| %>
    <h4><%= unit.name %></h4>
    <% unit.employees.each do |employee|%>
    <p><%= employee.first_name %>
      <%= employee.last_name %></p>
      <% end %>
      <% end %>
      <%= link_to 'new employee', new_employee_path %>
    </div>
  </div>

  <button class="fa fa-trash" aria-hidden="true">
    <%= link_to 'destroy location', location_path(@location), method: :delete,  data: { confirm: "Delete #{@location.name} ? " } %>
  </button>

</div>
