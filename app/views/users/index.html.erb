<h1>Registered users</h1>
<table class="table">
  <thead>
    <tr>
      <th>id</th>
      <!-- for using sorted on another column change this in controller method sort_column -->
      <th>first name</th>
      <th>last name</th>
      <th>email</th>
      <th>department</th>
      <th>floor</th>
      <th>fulltime contract</th>
      <th>role</th>
      <th> link to user </th>
    </tr>
  </thead>
  <% @users.each do |user| %>
  <tbody>
    <tr>
      <td><%= user.id%></td>
      <td><%= user.first_name %></td>
      <td><%= user.last_name %></td>
      <td><%= user.email %></td>
      <td><%= user.department %></td>
      <td><%= user.floor %></td>
      <td><%= user.full_time %></td>
      <td><%= user.role %></td>
      <td><%= link_to "go to user", user_path(user.id)%></td>
    </tr>
    <% end %>
  </tbody>
</table>

<% if current_user.present? && current_user.role == 'Admin' %>
<p><%= link_to "new user", new_user_path %></p>
<% end %>
